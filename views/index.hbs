<div class="container py-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card text-center">
        <div class="card-body mt-5">
            <h3 class="card-title fw-bold mt-1 mb-5">URL Shortener</h3>
            <img class="mb-5"style="width: 8rem;" src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png" alt="link image">
            <div class="mt-5 px-3">
              {{#if shortenedUrl}}
              <div class="text-start">
              <h4>Success! Please use this link:</h4>
              <a href="{{shortenedUrl}}">{{shortenedUrl}}</a>
              </div>
              {{else}}
              <form action="/urls" method="post">
                <input type="url" class="form-control bg-secondary text-dark bg-opacity-10 border border-white fw-bold" name="input"
                  placeholder="Input URL here">
                <div class="d-grid gap-2 col-6 mt-3 mx-auto">
                  <button type="submit" class="btn btn-outline-primary fw-bold">Shorten</button>
                </div>
              </form>
              {{/if}}
            </div>
        </div>
      </div>
      </div>
    </div>
</div>

